{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"baseUrl": "./",
		"noImplicitAny": false,
		"rootDir": "./src",
		"outDir": "./esm",
		"strict": false,
		"noEmitOnError": false,
		"declaration": true,
		"declarationDir": "./types",
		"types": [
			"vite"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"*.d.ts",
		"types/*.d.ts"
	]
}
